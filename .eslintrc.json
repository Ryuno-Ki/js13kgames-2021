{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
      "ROLE_HOST": "readonly",
      "ROLE_OPPONENT": "readonly",
      "ROLE_SPECTATOR": "readonly",
      "ROLE_UNKNOWN": "readonly",
      "storage": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": ["*.min.js"],
    "plugins": [
      "mocha"
    ]
}
