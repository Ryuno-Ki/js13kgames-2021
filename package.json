{
  "name": "js13kgames-2021",
  "version": "0.1.0",
  "description": "The topic in 2021 is SPACE",
  "main": "index.js",
  "scripts": {
    "build": "rollup -c",
    "commit-msg": "commitlint -e",
    "copy:css": "cleancss ./src/css/main.css -o ./public/main.css",
    "copy:icons": "cp ./src/favicon.ico ./dist/ && cp ./src/icon.png ./dist",
    "coverage": "nyc npm run test",
    "deploy": "gh-pages -d ./dist -r git@github.com:Ryuno-Ki/js13kgames-2021.git",
    "docs": "jsdoc -c ./.jsdoc.conf.json -d ./docs -P ./package.json -R README.md -r ./src",
    "lint": "npm run lint:js && npm run lint:md",
    "lint:js": "eslint ./src",
    "lint:md": "markdownlint --ignore ./node_modules --ignore ./lib **/*.md",
    "postbuild": "npm run copy:css",
    "posttest": "npm run tsd",
    "prebuild": "npm run docs",
    "predeploy": "npm run build",
    "prepare": "husky install",
    "prestart": "npm run build",
    "pre-commit": "npm run types && npm run lint && npm run test",
    "start": "node index.js",
    "start:dev": "nodemon",
    "test": "mocha --require test/require.js",
    "tsc": "tsc",
    "tsd": "tsd",
    "types": "tsc --noEmit false --emitDeclarationOnly true"
  },
  "repository": {
    "type": "git",
    "url": "ryunoki@jaenis.ch:ryuno-ki/js13kgames-2021.git"
  },
  "engines": {
    "node": "16.0.0",
    "npm": "7.10.0"
  },
  "keywords": [],
  "author": "Andr√© Jaenisch",
  "license": "GPL-3.0-or-later",
  "nodemonConfig": {
    "ext": "js,mjs,ts,json,css,scss,sass,html,pug"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@rollup/plugin-buble": "0.21.3",
    "@rollup/plugin-commonjs": "20.0.0",
    "@rollup/plugin-node-resolve": "13.0.4",
    "chai": "4.3.4",
    "clean-css-cli": "5.3.3",
    "eslint": "7.32.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.24.1",
    "eslint-plugin-mocha": "9.0.0",
    "eslint-plugin-promise": "5.1.0",
    "gh-pages": "3.2.3",
    "html5-boilerplate": "8.0.0",
    "husky": "7.0.1",
    "jsdoc": "3.6.7",
    "jsdoc-mermaid": "1.0.0",
    "jsdom": "17.0.0",
    "markdownlint-cli": "0.28.1",
    "mocha": "9.1.0",
    "nodemon": "2.0.12",
    "nyc": "15.1.0",
    "rollup": "2.56.3",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-license": "2.5.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-visualizer": "5.5.2",
    "sinon": "11.1.2",
    "standard": "16.0.3",
    "tap": "15.0.9",
    "tsd": "0.17.0",
    "typescript": "4.3.5",
    "zip-dir": "2.0.0"
  },
  "dependencies": {
    "archiver": "5.3.0",
    "body-parser": "1.19.0",
    "chalk": "4.1.2",
    "express": "4.17.1",
    "express-session": "1.17.2",
    "mysql2": "2.3.0",
    "pg": "8.7.1",
    "pg-hstore": "2.3.4",
    "sequelize": "6.6.5",
    "socket.io": "4.1.3",
    "sqlite3": "5.0.2"
  }
}
